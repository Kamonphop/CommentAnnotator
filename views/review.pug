extends layout

block content
	h4(style="text-align:center")
		| ReviewID = #{rev._id}
	nav.breadcrumb
		a.breadcrumb-item(href='/admin') Admin Console
		a.breadcrumb-item(href='/admin/allreviews') List of reviews
		span.breadcrumb-item.active #{rev._id}
	div(style="padding-top:20px;")
		table.table.table-sm
			thead
				tr
					th(rowspan="2") #
					th.sentencecell(rowspan="2") Sentence
					th(colspan="3") Category
					th.toggleDisplayC0(colspan="3") C0
					th.toggleDisplayC1(colspan="3") C1
					th.toggleDisplayC2(colspan="3") C2
				tr
					th(id="expand_C0") C0
					th(id="expand_C1") C1
					th(id="expand_C2") C2
					th.toggleDisplayC0 0
					th.toggleDisplayC0 1
					th.toggleDisplayC0 2
					th.toggleDisplayC1 0
					th.toggleDisplayC1 1
					th.toggleDisplayC1 2
					th.toggleDisplayC2 0
					th.toggleDisplayC2 1
					th.toggleDisplayC2 2
			tbody
				each sentence, i in labeled_review_data
					tr
						th(scope='row')
							= i+1
						td.sentencecell #{sentence.sentenceText}
						td #{sentence.bigcat["0"]}
						td #{sentence.bigcat["1"]}
						td #{sentence.bigcat["2"]}
						td.toggleDisplayC0 #{sentence.cat0["0"]}
						td.toggleDisplayC0 #{sentence.cat0["1"]}
						td.toggleDisplayC0 #{sentence.cat0["2"]}
						td.toggleDisplayC1 #{sentence.cat1["0"]}
						td.toggleDisplayC1 #{sentence.cat1["1"]}
						td.toggleDisplayC1 #{sentence.cat1["2"]}
						td.toggleDisplayC2 #{sentence.cat2["0"]}
						td.toggleDisplayC2 #{sentence.cat2["1"]}
						td.toggleDisplayC2 #{sentence.cat2["2"]}
block javascript
	script(src="/js/admin.js")