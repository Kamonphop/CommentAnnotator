doctype html
html
    head
        title= 'CSSE Annotator'
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/prism_test.css')
        link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
    body
        nav.navbar.navbar-toggleable-md.navbar-inverse.bg-inverse.fixed-top
            button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            a.navbar-brand(href='/home') CSSE Annotator
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item.active
                        a.nav-link(href='/home')
                            | Home 
                            span.sr-only (current)
                ul.navbar-nav.ml-auto
                    if user
                        li.nav-item.dropdown
                            a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href='http://example.com', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                                | #{user.local.email}
                            .dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
                                a.dropdown-item(href='#') Profile
                                if (user.local.isAdmin)
                                    a.dropdown-item(href='/admin') Admin
                                a.dropdown-item(href='/logout') Logout
                    else
                        li.nav-item
                            a.nav-link(href='/login') Please Login
        .container
            .row
                .col-sm-8(style="background-color:black")
                    pre.line-numbers(id="testpre",style="max-height:35em;")
                        code.language-java #{srcCodeContent}
                .col-sm-4(style="background-color:gray")
                    <a class="btn btn-large btn-success" id="testclick">Send Email</a>
            div(style="padding-top:20px;height:100px;font-size: 12px;")
                textarea(id="comment_show")
        script(src="/js/jquery-3.2.1.min.js")
        script(src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js")
        script(src="/js/bootstrap.min.js")
        script(src="/js/prism_test.min.js")
        script(src="/js/codecopy.js")
        script(type='text/javascript').
            var local_data =!{JSON.stringify(srcCodeContent)}
            console.log(local_data);